<h1>Тестове завдання</h1>

<%= form_with model: @test, local: true, html: { autocomplete: "off" } do  |f| %> 
	<% if @test.errors.any? %>
	  <div id="error_explanation">
	    <h2>
	      Виправте <%= pluralize(@test.errors.count, "помилок") %> щоб відправити інвайт:
	    </h2>
	    <ul>
	      <% @test.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	    </ul>
	  </div>
	<% end %>

<div class="form-group row">
    <%= f.label :text, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_area :text, {class: 'form-control'} %>
    </div>
  </div>
  <fieldset class="form-group row">
    <legend class="col-form-label col-sm-2 float-sm-left pt-0">Тип тестового</legend>
    <div class="col-sm-10">
      <div class="form-check">
        <%= f.radio_button :kind, "technical", class: 'form-check-input' %>
				<%= f.label :kind_technical, "технічне", class: 'form-check-label' %>
      </div>
      <div class="form-check">
        <%= f.radio_button :kind, "english", class: 'form-check-input' %>
				<%= f.label :kind_english, "англійська", class: 'form-check-label' %>
      </div>
    </div>
  </fieldset>
  <div class="form-group row">
  	<%= f.label :level_id, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.select 'level_id', Level.all.map { |l| [ l.level, l.id] }, {include_blank: true, selected: "#{@test.level_id ? @test.level_id : ''}"}, {class: 'form-control'} %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <%= f.submit t('.add_test'), class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
